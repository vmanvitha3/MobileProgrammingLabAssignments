<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.login.SettingsPageActivity"
    android:id="@+id/linear_layout"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Auto Upload"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Auto Brightness"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="New Message Notification"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Vibration"/>

    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="60dp"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:onClick="returnHome"
        android:text="Back to Home Page"/>

</LinearLayout>
